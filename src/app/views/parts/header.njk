<header>
    <div class="container">
        <a href="/">
            <div class="logo">
                <h1>LauchStore</h1>
                <h2>Purchases and Sales</h2>
            </div>
        </a>

        <form class="search" method="GET" action="/products/search">
            <input type="text" name="filter" placeholder="Seach for Products" {% if search.term %} value="{{ serach.term }}" {% endif %}>
        </form>
        <nav class="primary">
            <ul>
                <li>
                    <a href="/ads/create">
                        {% if user %}
                            <i class="material-icons">add_circle</i>
                            New Adverts
                    </a>
                     {% endif %}
                </li>
                <li class="accounts">
                    <a href="/accounts">
                        <i class="material-icons">account_circle</i>
                        {% if user %}
                            {{ user.name}}
                        {% else %}
                            My account
                        {% endif %}

                    </a>

                    {% if session.userId %}

                        <ul class="submenu">
                            <li><a href="/users">My account</a></li>
                            <li><a href="/users/ads">My Requests</a></li>
                            <li><a href="/selling">My Sales</a></li>
                            <li>
                                <form action="/users/logout" method="POST">
                                    <button>Logout</button>
                                </form>
                            </li>
                        </ul>
                    {% endif %}
                </li>
                <li class="cart">
                <a href="/cart">
                    <i class="material-icons">shopping_cart</i>
                    {% if (session.cart) and (session.cart.total.quantity > 0) %}
                        <span id="cart-status-info">{{session.cart.total.quantity}}</span>
                    {% endif %}
                </a>
                </li>
            </ul>

        </nav>

    </div>

</header>