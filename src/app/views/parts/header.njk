<header>
    <div class="container">
        <a href="/">
            <div class="logo">
                <h1>LauchStore</h1>
                <h2>Purchases and Sales</h2>
            </div>
        </a>

        <form class="search" method="GET" action="/products/search">
            <input type="text" name="filter" placeholder="Search for Products" {% if search.term %} value="{{ search.term }}" {% endif %}>
        </form>
        <nav class="primary">
            <ul>
                <li>
                    {% if session.userId %}
                        <a href="/ads/create">
                            <i class="material-icons">add_circle</i>
                                New Ads
                        </a>
                     {% endif %}
                </li>
                <li class="dropdown-container">
                    <a href="/accounts">
                      
                        {% if session.userId %}

                            <img src="https://images.unsplash.com/photo-1565464027194-7957a2295fb7?ixlib=rb-1.2.1&ixid=eyJhcHBfaWQiOjEyMDd9&auto=format&fit=crop&w=800&q=80" alt="">

                            {# {{ session.userName}}  #}
                        {% else %}
                            <i class="material-icons">account_circle</i>
                            My account
                        {% endif %}

                    </a>

                    {% if session.userId %}

                        <ul class="dropdown header">
                            <li>
                                <div>
                                    <img src="https://images.unsplash.com/photo-1565464027194-7957a2295fb7?ixlib=rb-1.2.1&ixid=eyJhcHBfaWQiOjEyMDd9&auto=format&fit=crop&w=800&q=80" alt="">
                                    <p class="name">{{ session.userName}} </p>
                                    <p>{{ session.userEmail}} </p>
                                </div>    
                            </li>
                            <li><a href="/users">My account</a></li>
                            <li><a href="/users/ads">My Requests</a></li>
                            <li><a href="/orders">My Orders</a></li>
                            <li><a href="/orders/sales">My Sales</a></li>
                            <li>
                                <form action="/users/logout" method="POST">
                                    <button>Logout</button>
                                </form>
                            </li>
                        </ul>
                    {% endif %}
                </li>
                <li class="cart">
                <a href="/cart">
                    <i class="material-icons">shopping_cart</i>
                    {% if (session.cart) and (session.cart.total.quantity > 0) %}
                        <span id="cart-status-info">{{session.cart.total.quantity}}</span>
                    {% endif %}
                </a>
                </li>
            </ul>

        </nav>
    
    </div>

</header>