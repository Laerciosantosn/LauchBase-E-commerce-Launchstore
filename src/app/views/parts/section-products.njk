{% macro products(name, classes, products) %}

<section class="shop {{ classes }}">
        {% if name %}
            <h2>{{ name }}</h2>
        {% endif %}
        <div class="items">
            {% for product in products %}
                <div class="product">
                    {# <div class="image"
                        style="background-image: url('{{ product.img if product.img else 'http://placehold.it/500x500?text=PRODUTO SEM FOTO'}}');"
                    >
                    </div> #}
                    {%if product.img %}
                    <div class="image" >
                        <img src="{{ product.img }}" alt="">
                    </div>
                    {% else %}
                        <img class="image" src="http://placehold.it/500x500?text=PRODUTO SEM FOTO" alt="">
                    {% endif %}
                   <div id="old-price">
                        {% if product.formatedOldPrice != formatedPrice %}
                            <div class="old-price">{{ product.formatedOldPrice }}</div>
                        {% endif %}
                    </div>
                    <p>{{ product.formatedPrice }}</p>
                    <h4>{{ product.name }}</h4>

                    <a href="/products/{{ product.id }}" class="button">Ver Produto</a>
      
                </div>
            {% endfor %}
        </div>
    </section> 
{% endmacro %}
